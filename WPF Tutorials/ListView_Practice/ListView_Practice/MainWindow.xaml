<Window x:Class="ListView_Practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListView_Practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <ListView Grid.Row="1" BorderThickness="1" Name="lvEntry" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="100"/>
                    <GridViewColumn Header="Mark" Width="100"/>
                    <GridViewColumn Header="Sex" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        
    </Grid>
</Window>
