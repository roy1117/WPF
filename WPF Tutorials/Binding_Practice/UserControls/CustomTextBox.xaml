<UserControl x:Class="Binding_Practice.UserControls.CustomTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Binding_Practice.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="277*"/>
            <ColumnDefinition Width="523*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtTextBox" HorizontalAlignment="Left" Margin="25,0,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Center" Width="320" Grid.ColumnSpan="2" Height="80" FontSize="30"/>
        <Border BorderThickness="10" BorderBrush="Blue" Width="800" Height="100"/>
    </Grid>
</UserControl>
