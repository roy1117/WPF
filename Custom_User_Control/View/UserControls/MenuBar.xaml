<UserControl x:Class="Custom_User_Control.View.UserControls.ManuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Custom_User_Control.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="800">
    <Grid Grid.Row="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File" FontSize="20">
                <MenuItem Header="Exit" Name="muExit" FontSize="16" Click="muExit_Click"/>
            </MenuItem>
            <MenuItem Header="Edit" FontSize="20"/>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Content="Serach" Grid.Column="0" Width="50" Margin="5"/>
            <TextBox Grid.Column="1" Width="150" Margin="5"/>
        </Grid>
    </Grid>
</UserControl>
